{
  "runner": {
    "command": ["codex", "exec"],
    "args": ["--full-auto", "-C", "{repo}", "--output-last-message", "{last_message_file}", "-"],
    "fast_args": ["--full-auto", "-c", "model_reasoning_effort=\"low\"", "-C", "{repo}", "--output-last-message", "{last_message_file}", "-"],
    "prompt_mode": "stdin"
  },
  "loops": [
    {
      "id": "openprose-test",
      "spec_file": ".superloop/openprose-test.md",
      "max_iterations": 1,
      "completion_promise": "READY",
      "checklists": [],
      "tests": { "mode": "disabled", "commands": [] },
      "evidence": { "enabled": false, "require_on_completion": false, "artifacts": [] },
      "approval": { "enabled": false, "require_on_completion": false },
      "reviewer_packet": { "enabled": false },
      "timeouts": { "enabled": false, "default": 0, "planner": 0, "implementer": 0, "tester": 0, "reviewer": 0 },
      "stuck": { "enabled": false, "threshold": 0, "action": "report_and_stop", "ignore": [] },
      "roles": ["planner", "prose-author", "openprose", "reviewer"]
    }
  ]
}
