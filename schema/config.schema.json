{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Supergent Config",
  "type": "object",
  "definitions": {
    "runner_config": {
      "type": "object",
      "description": "Configuration for a runner (AI coding CLI)",
      "properties": {
        "command": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Command to invoke (e.g., ['codex', 'exec'] or ['claude'])"
        },
        "args": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Arguments to pass (supports {repo}, {last_message_file} placeholders)"
        },
        "fast_args": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Alternative args for --fast mode"
        },
        "prompt_mode": {
          "type": "string",
          "enum": ["stdin", "file"],
          "description": "How to pass the prompt: stdin or file"
        }
      },
      "required": ["command", "args"]
    },
    "thinking_level": {
      "type": "string",
      "enum": ["none", "minimal", "low", "standard", "high", "max"],
      "default": "standard",
      "description": "Thinking/reasoning effort level. Translates to: Codex (reasoning_effort), Claude (thinking_mode + budget)"
    },
    "role_config": {
      "type": "object",
      "description": "Configuration for a single role",
      "properties": {
        "runner": {
          "type": "string",
          "description": "Runner type: 'codex', 'claude', or name from 'runners' registry"
        },
        "model": {
          "type": "string",
          "description": "Model ID (e.g., 'gpt-5.2-codex', 'claude-sonnet-4-5-20250929')"
        },
        "thinking": {
          "$ref": "#/definitions/thinking_level"
        }
      },
      "required": ["runner"]
    }
  },
  "properties": {
    "runner": {
      "$ref": "#/definitions/runner_config",
      "description": "Default runner for all roles (legacy single-runner mode)"
    },
    "runners": {
      "type": "object",
      "description": "Named runner registry for per-role runner selection",
      "additionalProperties": {
        "$ref": "#/definitions/runner_config"
      },
      "examples": [{
        "codex": {"command": ["codex", "exec"], "args": ["--full-auto", "-C", "{repo}", "-"]},
        "claude": {"command": ["claude"], "args": ["--dangerously-skip-permissions", "--print", "-C", "{repo}", "-"]}
      }]
    },
    "role_defaults": {
      "type": "object",
      "description": "Default model and thinking configuration per role. Used when loop doesn't specify.",
      "properties": {
        "planner": {"$ref": "#/definitions/role_config"},
        "implementer": {"$ref": "#/definitions/role_config"},
        "tester": {"$ref": "#/definitions/role_config"},
        "reviewer": {"$ref": "#/definitions/role_config"}
      },
      "default": {
        "planner": {"runner": "codex", "model": "gpt-5.2-codex", "thinking": "max"},
        "implementer": {"runner": "claude", "model": "claude-sonnet-4-5-20250929", "thinking": "standard"},
        "tester": {"runner": "claude", "model": "claude-sonnet-4-5-20250929", "thinking": "standard"},
        "reviewer": {"runner": "codex", "model": "gpt-5.2-codex", "thinking": "max"}
      }
    },
    "loops": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "spec_file": {"type": "string"},
          "max_iterations": {"type": "integer"},
          "completion_promise": {"type": "string"},
          "checklists": {
            "type": "array",
            "items": {"type": "string"}
          },
          "tests": {
            "type": "object",
            "properties": {
              "mode": {
                "type": "string",
                "enum": ["disabled", "every", "on_promise"]
              },
              "commands": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["mode", "commands"]
          },
          "planning": {
            "type": "object",
            "description": "Configuration for the planning workflow",
            "properties": {
              "style": {
                "type": "string",
                "enum": ["supergent", "simple"],
                "default": "supergent",
                "description": "Planning style: 'supergent' uses PLAN.MD + PHASE files with atomic tasks, 'simple' uses a single plan.md"
              },
              "phases_enabled": {
                "type": "boolean",
                "default": true,
                "description": "Whether to use separate PHASE_*.MD files for task breakdown"
              }
            }
          },
          "validation": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "mode": {
                "type": "string",
                "enum": ["disabled", "every", "on_promise"]
              },
              "require_on_completion": {"type": "boolean"},
              "preflight": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "entry": {"type": "string"},
                  "web_root": {"type": "string"},
                  "required_selectors": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "required_text": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "min_script_bytes": {"type": "integer"},
                  "max_script_kb": {"type": "integer"},
                  "require_scripts": {"type": "boolean"}
                },
                "required": ["enabled"]
              },
              "smoke_tests": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "optional": {"type": "boolean"},
                  "entry": {"type": "string"},
                  "web_root": {"type": "string"},
                  "checks": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "selector": {"type": "string"},
                        "text": {"type": "string"},
                        "should": {"type": "string"}
                      }
                    }
                  },
                  "screenshot_path": {"type": "string"},
                  "timeout_ms": {"type": "integer"},
                  "headless": {"type": "boolean"},
                  "fail_on_console_error": {"type": "boolean"}
                },
                "required": ["enabled"]
              },
              "automated_checklist": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "mapping_file": {"type": "string"}
                },
                "required": ["enabled"]
              },
              "agent_browser": {
                "type": "object",
                "description": "Browser automation tests using agent-browser CLI",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "optional": {"type": "boolean"},
                  "session": {
                    "type": "string",
                    "description": "Session name (supports {loop_id}, {iteration} placeholders)"
                  },
                  "setup": {
                    "type": "array",
                    "items": {"type": "string"},
                    "description": "Commands to run before tests (e.g., open, wait)"
                  },
                  "tests": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "commands": {
                          "type": "array",
                          "items": {"type": "string"}
                        }
                      },
                      "required": ["name", "commands"]
                    }
                  },
                  "cleanup": {
                    "type": "array",
                    "items": {"type": "string"},
                    "description": "Commands to run after tests (e.g., close)"
                  },
                  "screenshot_on_failure": {"type": "boolean"},
                  "screenshot_path": {"type": "string"},
                  "timeout_ms": {"type": "integer"},
                  "headed": {"type": "boolean"}
                },
                "required": ["enabled"]
              }
            },
            "required": ["enabled", "require_on_completion"]
          },
          "evidence": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "require_on_completion": {"type": "boolean"},
              "artifacts": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["enabled", "require_on_completion", "artifacts"]
          },
          "approval": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "require_on_completion": {"type": "boolean"}
            },
            "required": ["enabled", "require_on_completion"]
          },
          "reviewer_packet": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"}
            },
            "required": ["enabled"]
          },
          "tester_exploration": {
            "type": "object",
            "description": "Configuration for tester's exploratory testing capabilities",
            "properties": {
              "enabled": {"type": "boolean"},
              "tool": {
                "type": "string",
                "enum": ["agent_browser"],
                "description": "Browser automation tool for exploration"
              },
              "entry_url": {
                "type": "string",
                "description": "URL to open for exploration (supports {web_root}, {repo} placeholders)"
              },
              "focus_areas": {
                "type": "array",
                "items": {"type": "string"},
                "description": "Areas to focus exploration on (e.g., 'Login flow', 'Dashboard')"
              },
              "max_steps": {
                "type": "integer",
                "description": "Maximum exploration steps to limit cost/time"
              },
              "screenshot_dir": {
                "type": "string",
                "description": "Directory for exploration screenshots"
              }
            },
            "required": ["enabled"]
          },
          "timeouts": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "default": {"type": "integer"},
              "planner": {"type": "integer"},
              "implementer": {"type": "integer"},
              "tester": {"type": "integer"},
              "reviewer": {"type": "integer"}
            },
            "required": ["enabled", "default", "planner", "implementer", "tester", "reviewer"]
          },
          "stuck": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "threshold": {"type": "integer"},
              "action": {"type": "string"},
              "ignore": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["enabled", "threshold", "action", "ignore"]
          },
          "rlms": {
            "type": "object",
            "description": "Recursive language model scaffold settings for role-local long-context analysis",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": false,
                "description": "Enable RLMS integration for this loop"
              },
              "mode": {
                "type": "string",
                "enum": ["auto", "requested", "hybrid"],
                "default": "hybrid",
                "description": "Trigger mode: auto thresholds, explicit request, or both"
              },
              "request_keyword": {
                "type": "string",
                "default": "RLMS_REQUEST",
                "description": "Keyword that explicitly requests RLMS execution when mode allows it"
              },
              "auto": {
                "type": "object",
                "properties": {
                  "max_lines": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 2500,
                    "description": "Auto-trigger when aggregated context lines meet/exceed this value"
                  },
                  "max_estimated_tokens": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 120000,
                    "description": "Auto-trigger when aggregated estimated tokens meet/exceed this value"
                  },
                  "max_files": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 40,
                    "description": "Auto-trigger when file count meets/exceeds this value"
                  }
                }
              },
              "roles": {
                "type": "object",
                "description": "Role-level RLMS enablement (defaults to true per role when omitted)",
                "properties": {
                  "planner": {"type": "boolean"},
                  "implementer": {"type": "boolean"},
                  "tester": {"type": "boolean"},
                  "reviewer": {"type": "boolean"}
                }
              },
              "limits": {
                "type": "object",
                "properties": {
                  "max_steps": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 40
                  },
                  "max_depth": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 2
                  },
                  "timeout_seconds": {
                    "type": "integer",
                    "minimum": 1,
                    "default": 240
                  }
                }
              },
              "output": {
                "type": "object",
                "properties": {
                  "format": {
                    "type": "string",
                    "enum": ["json"],
                    "default": "json"
                  },
                  "require_citations": {
                    "type": "boolean",
                    "default": true
                  }
                }
              },
              "policy": {
                "type": "object",
                "properties": {
                  "force_on": {
                    "type": "boolean",
                    "default": false,
                    "description": "Always run RLMS for enabled roles"
                  },
                  "force_off": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable RLMS regardless of other trigger settings"
                  },
                  "fail_mode": {
                    "type": "string",
                    "enum": ["warn_and_continue", "fail_role"],
                    "default": "warn_and_continue",
                    "description": "How loop handles RLMS execution failures"
                  }
                }
              }
            },
            "required": ["enabled"]
          },
          "usage_check": {
            "type": "object",
            "description": "Pre-flight API usage limit checking before each role execution",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true,
                "description": "Enable pre-flight usage checks (gracefully degrades if no credentials)"
              },
              "warn_threshold": {
                "type": "integer",
                "default": 70,
                "minimum": 0,
                "maximum": 100,
                "description": "Log warning when usage exceeds this percentage"
              },
              "block_threshold": {
                "type": "integer",
                "default": 95,
                "minimum": 0,
                "maximum": 100,
                "description": "Block execution when usage exceeds this percentage"
              },
              "wait_on_limit": {
                "type": "boolean",
                "default": false,
                "description": "Wait for rate limit reset instead of stopping execution"
              },
              "max_wait_seconds": {
                "type": "integer",
                "default": 7200,
                "minimum": 0,
                "description": "Maximum seconds to wait for rate limit reset (default: 2 hours)"
              }
            }
          },
          "git": {
            "type": "object",
            "description": "Git auto-commit configuration for iteration changes",
            "properties": {
              "commit_strategy": {
                "type": "string",
                "enum": ["never", "per_iteration", "on_test_pass"],
                "default": "never",
                "description": "When to automatically commit changes: never, after every iteration, or only when tests pass"
              },
              "pre_commit_commands": {
                "type": "string",
                "description": "Optional shell command to run before committing (e.g., 'bun run lint:fix' to auto-fix linting issues)"
              }
            }
          },
          "roles": {
            "oneOf": [
              {
                "type": "array",
                "items": {"type": "string"},
                "description": "Simple list of roles using default runner and role_defaults"
              },
              {
                "type": "object",
                "description": "Per-role configuration with runner, model, and thinking level",
                "additionalProperties": {
                  "$ref": "#/definitions/role_config"
                },
                "examples": [{
                  "planner": {"runner": "codex", "model": "gpt-5.2-codex", "thinking": "max"},
                  "implementer": {"runner": "claude", "model": "claude-sonnet-4-5-20250929", "thinking": "standard"},
                  "tester": {"runner": "claude", "model": "claude-sonnet-4-5-20250929", "thinking": "standard"},
                  "reviewer": {"runner": "codex", "model": "gpt-5.2-codex", "thinking": "max"}
                }]
              }
            ]
          }
        },
        "required": [
          "id",
          "spec_file",
          "max_iterations",
          "completion_promise",
          "checklists",
          "tests",
          "evidence",
          "approval",
          "reviewer_packet",
          "timeouts",
          "stuck",
          "roles"
        ]
      }
    }
  },
  "anyOf": [
    {"required": ["runner", "loops"]},
    {"required": ["runners", "loops"]}
  ]
}
