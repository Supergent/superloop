{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Supergent Config",
  "type": "object",
  "properties": {
    "runner": {
      "type": "object",
      "properties": {
        "command": {
          "type": "array",
          "items": {"type": "string"}
        },
        "args": {
          "type": "array",
          "items": {"type": "string"}
        },
        "fast_args": {
          "type": "array",
          "items": {"type": "string"}
        },
        "prompt_mode": {
          "type": "string",
          "enum": ["stdin", "file"]
        }
      },
      "required": ["command", "args"]
    },
    "loops": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string"},
          "spec_file": {"type": "string"},
          "max_iterations": {"type": "integer"},
          "completion_promise": {"type": "string"},
          "checklists": {
            "type": "array",
            "items": {"type": "string"}
          },
          "tests": {
            "type": "object",
            "properties": {
              "mode": {
                "type": "string",
                "enum": ["disabled", "every", "on_promise"]
              },
              "commands": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["mode", "commands"]
          },
          "validation": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "mode": {
                "type": "string",
                "enum": ["disabled", "every", "on_promise"]
              },
              "require_on_completion": {"type": "boolean"},
              "preflight": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "entry": {"type": "string"},
                  "web_root": {"type": "string"},
                  "required_selectors": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "required_text": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "min_script_bytes": {"type": "integer"},
                  "max_script_kb": {"type": "integer"},
                  "require_scripts": {"type": "boolean"}
                },
                "required": ["enabled"]
              },
              "smoke_tests": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "optional": {"type": "boolean"},
                  "entry": {"type": "string"},
                  "web_root": {"type": "string"},
                  "checks": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "selector": {"type": "string"},
                        "text": {"type": "string"},
                        "should": {"type": "string"}
                      }
                    }
                  },
                  "screenshot_path": {"type": "string"},
                  "timeout_ms": {"type": "integer"},
                  "headless": {"type": "boolean"},
                  "fail_on_console_error": {"type": "boolean"}
                },
                "required": ["enabled"]
              },
              "automated_checklist": {
                "type": "object",
                "properties": {
                  "enabled": {"type": "boolean"},
                  "mapping_file": {"type": "string"}
                },
                "required": ["enabled"]
              }
            },
            "required": ["enabled", "require_on_completion"]
          },
          "evidence": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "require_on_completion": {"type": "boolean"},
              "artifacts": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["enabled", "require_on_completion", "artifacts"]
          },
          "approval": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "require_on_completion": {"type": "boolean"}
            },
            "required": ["enabled", "require_on_completion"]
          },
          "reviewer_packet": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"}
            },
            "required": ["enabled"]
          },
          "timeouts": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "default": {"type": "integer"},
              "planner": {"type": "integer"},
              "implementer": {"type": "integer"},
              "tester": {"type": "integer"},
              "reviewer": {"type": "integer"}
            },
            "required": ["enabled", "default", "planner", "implementer", "tester", "reviewer"]
          },
          "stuck": {
            "type": "object",
            "properties": {
              "enabled": {"type": "boolean"},
              "threshold": {"type": "integer"},
              "action": {"type": "string"},
              "ignore": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "required": ["enabled", "threshold", "action", "ignore"]
          },
          "roles": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": [
          "id",
          "spec_file",
          "max_iterations",
          "completion_promise",
          "checklists",
          "tests",
          "evidence",
          "approval",
          "reviewer_packet",
          "timeouts",
          "stuck",
          "roles"
        ]
      }
    }
  },
  "required": ["runner", "loops"]
}
